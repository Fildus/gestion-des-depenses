<a href="" data-toggle="modal" data-target="#modal-{{ id }}" class="btn btn-primary">
    Upload +
</a>

<div class="modal fade" id="modal-{{ id }}" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Nouvel upload</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(formUpload) }}
                {{ form_widget(formUpload) }}
                <div class="text-right">
                    <button class="btn btn-success" type="submit">Ajouter</button>
                </div>
                {{ form_end(formUpload) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>