<a href="" data-toggle="modal" data-target="#modal-{{ id }}">
    Copier
</a>

<div class="modal fade" id="modal-{{ id }}" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Copie de la d√©pense</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="{{ path('expenditure_copy', {'id': id}) }}">
                    <input name="date[{{ id }}]" type="date" class="form-control form-group">
                    <input type="hidden" name="_token" value="{{ csrf_token('copy' ~ id) }}">
                    <div class="text-right">
                        <button class="btn btn-success" type="submit">Ajouter</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>